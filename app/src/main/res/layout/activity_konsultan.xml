<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KonsultanActivity">

    <ImageView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="150dp"
        android:src="@drawable/kartu"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img"
        android:paddingTop="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_konsultasi_1"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img"
        android:text="Wijayanto Kusuma"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvBidang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img"
        android:layout_below="@id/tvName"
        android:text="Website Development"
        android:textSize="20sp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/view"
        android:layout_width="match_parent"
        android:layout_above="@id/ly"
        android:layout_height="match_parent"
        android:id="@+id/chatRecyclerView"/>


    <LinearLayout
        android:id="@+id/ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="text"
            android:background="@color/colorTextBackground"
            android:hint="Masukkan Pesan"
            android:padding="12dp"
            android:textColor="@color/colorText" />

        <ImageButton
            android:id="@+id/SendMessage"
            android:layout_width="40dp"
            android:src="@drawable/ic_send"
            android:background="@drawable/button_background"
            android:layout_height="40dp"/>

    </LinearLayout>



</RelativeLayout>