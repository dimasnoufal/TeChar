<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".discus.DiscusActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Berita"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="22sp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/imagekonsultasi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/discus_1"/>
    <TextView
        android:id="@+id/namakonsultasi"
        android:text="Diskusi dan Komunitas"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bidangkonsultasi"
        android:text="TeChar Community"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/descText"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Deskripsi :"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/deskripsikonsultasi"
        android:text="Tak ada yang lebih memperkaya daripada berbagi pemikiran dan pandangan. Temukan tempat untuk berdiskusi, bertukar ide, dan terhubung dengan komunitas yang peduli serta memiliki minat serupa. Perluaslah jaringan melalui komunitas TeChar!"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat"
        android:justificationMode="inter_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_discus"
        android:layout_marginTop="64dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="14sp"
        android:background="@drawable/shape_button"
        android:layout_height="40dp"
        android:text="Diskusi"/>

</LinearLayout>